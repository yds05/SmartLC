<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_selected="true">
		<shape>
			<gradient android:angle="270" android:endColor="#7f00ff00"
				android:startColor="#7f00ff00" />
			<padding android:left="5px" android:top="5px"
				android:right="5px" android:bottom="5px" />

			<size android:height="40px" />

			<corners android:radius="8px" />

		</shape>
	</item>
	<item android:state_focused="true" android:state_pressed="false">
		<shape>
			<gradient android:angle="270" android:endColor="#7f00ff00"
				android:startColor="#7f00ff00" />
			<padding android:left="5px" android:top="5px"
				android:right="5px" android:bottom="5px" />

			<size android:height="40px" />

			<corners android:radius="8px" />

		</shape>
	</item>
	<item android:state_pressed="true">
		<shape>
			<gradient android:angle="270" android:endColor="#7fff0000"
				android:startColor="#7fff0000" />
			<padding android:left="5px" android:top="5px"
				android:right="5px" android:bottom="5px" />

			<size android:height="40px" />

			<corners android:radius="8px" />

		</shape>
	</item>
	<item>
		<shape>
			<gradient android:angle="270" android:endColor="#7f7f7f7f"
				android:startColor="#7fffffff" />
			<padding android:left="5px" android:top="5px"
				android:right="5px" android:bottom="5px" />

			<size android:height="40px" />

			<corners android:radius="8px" />

		</shape>
	</item>

</selector>