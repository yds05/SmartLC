<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_navigator"
    android:layout_width="fill_parent"
    android:layout_height="48px"
    android:layout_alignParentTop="true"
    android:gravity="center"  
    android:weightSum="4.0"
    android:background="@drawable/bgtopmenu"
    android:orientation="horizontal">

		<ImageButton
			android:id="@+id/btnLastDay"
			android:layout_height="40px"
			android:layout_width="40px"
			android:gravity="center"
			android:scaleType="center"
			android:background="@drawable/btnlastday44" />
        
		<TextView android:id="@+id/txtSetdate" 
          	android:layout_width="wrap_content" 
          	android:layout_height="44px"
	      	android:gravity="center"
	      	android:layout_weight="2"
	      	android:text="@+string/textdate" 
	      	android:textSize="20px" />
		
		 <ImageButton
			android:id="@+id/btnNextDay"      	
			android:layout_height="40px"
        	android:layout_width="40px"
        	android:gravity="center"
        	android:scaleType="center"
        	android:background="@drawable/btnnextday44" />         
 
</LinearLayout>