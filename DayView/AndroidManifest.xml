<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0" 
    package="com.lifecalendar.dayview">
    <uses-sdk android:minSdkVersion="8" />

	<uses-permission android:name="android.permission.CALL_PHONE" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.WRITE_CONTACTS"/>
	<uses-permission android:name="android.permission.SEND_SMS" />
	<uses-permission android:name="android.permission.READ_SMS" />
	 
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name">
        <activity
            android:name=".MainActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" 
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|navigation|orientation"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="sensor">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllViewActivity"
            android:configChanges="keyboardHidden|navigation|orientation"
            android:screenOrientation="sensor"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".EventViewActivity"
            android:configChanges="keyboardHidden|navigation|orientation"
            android:screenOrientation="sensor"
            android:windowSoftInputMode="adjustPan"></activity>

        <activity
            android:name=".CameraViewActivity"
            android:configChanges="keyboardHidden|navigation|orientation"
            android:screenOrientation="sensor"
            android:windowSoftInputMode="adjustPan"></activity>

        <activity
            android:name=".MessageViewActivity"
            android:configChanges="keyboardHidden|navigation|orientation"
            android:screenOrientation="sensor"
            android:windowSoftInputMode="adjustPan"></activity>

        <activity
            android:name=".CallViewActivity"
            android:configChanges="keyboardHidden|navigation|orientation"
            android:screenOrientation="sensor"
            android:windowSoftInputMode="adjustPan"></activity>
            
        <activity
            android:name=".MyLifeViewActivity"
            android:configChanges="keyboardHidden|navigation|orientation"
            android:screenOrientation="sensor"
            android:windowSoftInputMode="adjustPan"></activity>

    </application>
    
</manifest>